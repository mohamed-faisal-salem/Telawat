<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- الطبقة الأولى: الصورة -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- خلفية شفافة -->
        </shape>
    </item>

    <!-- الطبقة الثانية: الدائرة مع الـ stroke -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- خلفية شفافة -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- الحدود -->
        </shape>
    </item>
</layer-list>