<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- خلفية السيك بار -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#444444" /> <!-- لون الخلفية الرمادي الغامق -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- الجزء غير الممتلئ -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#777777"/> <!-- لون الرمادي الفاتح للجزء الفاضي -->
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>

    <!-- الجزء الممتلئ (Progress) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FFFFFF"/> <!-- لون الأبيض للجزء الممتلئ -->
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>

</layer-list>
