<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:layoutDirection="rtl"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.aap.quraankareem.ui.home.HomeFragment"
        android:label="القراء"
        android:layoutDirection="rtl"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.aap.quraankareem.ui.dashboard.DashboardFragment"
        android:label="التحميلات"
        android:layoutDirection="rtl"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_folders"
        android:name="com.aap.quraankareem.ui.folder.FolderFragment"
        android:label="القوائم"
        android:layoutDirection="rtl"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.aap.quraankareem.ui.notifications.NotificationsFragment"
        android:label="الإعدادات"
        android:layoutDirection="rtl"
        tools:layout="@layout/fragment_notifications" />

</navigation>