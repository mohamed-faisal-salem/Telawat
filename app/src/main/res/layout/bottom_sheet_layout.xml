<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">

        <LinearLayout
            android:layoutDirection="ltr"
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:behavior_peekHeight="132dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:elevation="16dp">


    <LinearLayout
        android:id="@+id/collapsed_layout"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_recitation"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_tech"
            />
        <LinearLayout
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/play_pause_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_image"
                android:layout_marginEnd="12dp"
                android:elevation="8dp"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:src="@drawable/baseline_play_arrow_24" />

            <TextView
                android:id="@+id/surah_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:padding="10dp"
                android:fontFamily="@font/surah"
                android:layout_marginEnd="2dp"/>






</LinearLayout>





        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#FFFFFF" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expanded_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layoutDirection="ltr"
                android:background="@drawable/back">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#5400021D"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/control_panel_media_back"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/readerName"
                    android:layout_centerVertical="true"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text=""
                    android:fontFamily="@font/reader_font"
                    app:layout_constraintBottom_toTopOf="@+id/playerControls"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/surahName"
                    android:fontFamily="@font/surah_font"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="86dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    />

                <ImageView
                    android:id="@+id/collapsedBtn"
                    android:layout_width="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/baseline_expand_more_24" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layoutDirection="rtl"
                    android:id="@+id/playerControls"
                    android:paddingTop="6dp"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="14dp"
                    >
                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white_hint"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp" />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="18dp"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:thumb="@drawable/custom_progress"
                        android:progressDrawable="@drawable/custom_tumb"
                        android:indeterminate="false"
                        android:max="100" />

                    <!-- Time Text -->
                    <TextView
                        android:id="@+id/timeSurah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white_hint"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp" />
                </LinearLayout>
                <!-- Control Buttons -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layoutDirection="ltr"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="46dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/repeat"
                        android:layout_width="48dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_repeat_24" />

                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="48dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:src="@drawable/baseline_skip_previous_24" />


                    <ImageView
                        android:id="@+id/playButton"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:padding="10dp"
                        android:elevation="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/baseline_play_arrow_24"/>

                    <ImageView
                        android:id="@+id/previousButton"
                        android:layout_width="48dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:src="@drawable/baseline_skip_next_24" />
                    <ImageView
                        android:id="@+id/shuddle"
                        android:layout_width="48dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_shuffle_24" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    >


                    <ImageView
                        android:id="@+id/timeSelectorButton"
                        android:layout_width="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:layout_height="46dp"
                        android:padding="8dp"
                        android:src="@drawable/baseline_av_timer_24"
                        android:contentDescription="Select Time"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="120dp"
                        android:text=""
                        android:gravity="center"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_height="46dp"
                        android:padding="8dp"
                        android:layout_centerHorizontal="true"/>



                </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <!-- محتوى اللوحة الموسعة -->

        </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>